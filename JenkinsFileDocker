pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'docker:stable'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build and Run Docker') {
            steps {
                script {
                    // PowerShell script to convert Windows path to Unix-style path
                    def workspaceUnixPath = bat(
                        script: '''
                            powershell -NoProfile -Command "$p = (Get-Location).Path; $p = $p -replace '\\\\', '/'; $p = $p -replace 'C:', '/c'; Write-Output $p"
                        ''', 
                        returnStdout: true
                    ).trim()
                    echo "Workspace Unix Path: ${workspaceUnixPath}"
                    
                    docker.image(DOCKER_IMAGE).inside("-v /var/run/docker.sock:/var/run/docker.sock -w ${workspaceUnixPath}") {
                        sh 'docker version'
                        sh 'docker build -t my-app .'
                        sh 'docker run my-app'
                    }
                }
            }
        }
    }
}

